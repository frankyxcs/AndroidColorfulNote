<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/android_padding_normal"
    android:paddingLeft="@dimen/android_padding_middle"
    android:paddingRight="@dimen/android_padding_middle"
    android:paddingTop="@dimen/android_padding_normal">

    <LinearLayout
        android:id="@+id/ly_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_half_100"
        android:orientation="vertical"
        android:paddingBottom="@dimen/android_padding_normal"
        android:paddingLeft="@dimen/android_padding_middle"
        android:paddingRight="@dimen/android_padding_middle"
        android:paddingTop="@dimen/android_padding_normal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_title"
                android:layout_width="@dimen/android_width_small"
                android:layout_height="@dimen/android_width_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/design_blue_point" />

            <TextView
                android:id="@+id/txt_title_week"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/android_margin_normal"
                android:layout_toRightOf="@+id/iv_title"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_title_date"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_title_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/android_margin_normal"
            android:maxLines="2"
            android:minLines="2"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
